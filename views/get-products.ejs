<%- include('./partials/head') %>
<div class="container d-flex bg-secondary">
  <div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-12 m-5 d-flex align-items-center justify-content-center">
      <h2 class="justify-content-center">Vista de productos</h2>
    </div>
    <% if (products.length>0) { %>

    <div class="col-md-12 m-5 d-flex align-items-center justify-content-center">
      <table class="table table-striped table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Thumbnail</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(item => { %>
          <tr>
            <th scope="row"><%= item.id %></th>
            <td><%= item.title %></td>
            <td>$ <%= item.price %></td>
            <td><img src="<%= item.thumbnail %>" width="50" /></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } else { %>
    <div class="col-md-12 m-5 d-flex align-items-center justify-content-center">
      <p
        class="text-dark m-2 p-5 d-flex align-items-center justify-content-center bg-warning"
      >
        No hay datos
      </p>
    </div>
    <% } %>
    <div class="col-md-12 m-5 d-flex align-items-center justify-content-center">
      <a href="/" class="btn btn-success"> Create a product </a>
    </div>
  </div>
</div>
<%- include('./partials/foot') %>
